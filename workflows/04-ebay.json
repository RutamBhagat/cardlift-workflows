{
    "category": "productivity",
    "enabled": false,
    "historyDetectionUrl": "",
    "hostname": "ebay.com",
    "id": "",
    "name": "Ebay",
    "runInFocusMode": false,
    "steps": [
        {
            "executionType": "separate",
            "help": {
                "message": "We're having trouble finding the billing page.",
                "title": "Trouble Finding Billing Page"
            },
            "info": {
                "message": "We are filling your billing details",
                "title": "Filling Billing Details"
            },
            "isRequired": true,
            "operation": {
                "ignoreFailure": true,
                "type": "navigate",
                "url": "https://ppcapp.ebay.com/myppc/wallet/list"
            }
        },
        {
            "conditional": [
                {
                    "urlSelectors": [
                        "https://signin.ebay.com/signin/"
                    ]
                },
                {
                    "elementSelectors": [
                        {
                            "sizzleSelector": "h1[id=\"greeting-msg\"]:contains(\"Sign in to your account\")"
                        }
                    ]
                },
                {
                    "elementSelectors": [
                        {
                            "sizzleSelector": "h1[id=\"welcome-msg\"]:contains(\"Welcome back\")"
                        }
                    ]
                }
            ],
            "executionType": "separate",
            "operation": {
                "message": "Please provide your login credentials",
                "successConditional": [
                    {
                        "urlSelectors": [
                            "https://ppcapp.ebay.com/myppc/wallet/list"
                        ]
                    }
                ],
                "type": "await_user_help"
            }
        },
        {
            "conditional": [
                {
                    "elementSelectors": [
                        {
                            "sizzleSelector": "section.payment-options button[data-testid=\"icf-credit-card\"]:first"
                        }
                    ]
                }
            ],
            "executionType": "separate",
            "info": {
                "message": "Clicking on the Edit button for the first card",
                "title": "Edit First Card"
            },
            "isRequired": true,
            "operation": {
                "events": [
                    "click"
                ],
                "selector": "section.payment-options button[data-testid=\"icf-credit-card\"]:first",
                "type": "fire_events"
            }
        }
    ],
    "testing": true,
    "type": "BUSINESS"
}